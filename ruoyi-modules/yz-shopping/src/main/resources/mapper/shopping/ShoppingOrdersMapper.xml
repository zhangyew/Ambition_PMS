<!--    收货单（详情显示）-->
    <select id="showsDetailsReceipt" resultMap="ShowsOrdersResult">
        SELECT DATE_ADD(ord.create_time, INTERVAL 3 DAY) AS DatePlusThreeDays,order_material_id,ord.total_money,order_purchaser,order_supplier_id,ve.abbreviated,ve.responsible,ve.responsible_phone,ord.type_order_state
        FROM shopping_orders AS ord
                 INNER JOIN public_vendor AS ve ON(ord.order_supplier_id=ve.vendor_id)
                 INNER JOIN shopping_demand AS de ON(ord.order_material_id=de.demand_id)
        WHERE ord.order_id=#{orderId} AND ord.is_delete=0 AND ve.is_delete=0
    </select>


