    <sql id="selectShoppingOrdersVo">
        select order_id, require_id, buy_plan_id, order_title, order_source, order_number, order_purchaser, total_money, is_zt, car_number, driver_phone, orde_contract_id, order_context, contractdetails_amount, order_supplier_id, order_material_id, type_order_state, create_by, create_time, update_by, update_time, is_delete from shopping_orders
    </sql>

    <select id="selectShoppingOrdersList" parameterType="com.yz.shopping.domain.ShoppingOrders" resultMap="ShoppingOrdersResult">
        <include refid="selectShoppingOrdersVo"/>
        <where>
            <if test="orderTitle != null  and orderTitle != ''"> and order_title like concat('%', #{orderTitle}, '%')</if>
            <if test="orderNumber != null  and orderNumber != ''"> and order_number like concat('%', #{orderNumber}, '%')</if>
            <if test="orderSupplierId != null "> and order_supplier_id = #{orderSupplierId}</if>
            <if test="typeOrderState != null "> and type_order_state = #{typeOrderState}</if>
        </where>
    </select>

    <select id="selectShoppingOrdersByOrderId" parameterType="Long" resultMap="ShoppingOrdersResult">
        <include refid="selectShoppingOrdersVo"/>
        where order_id = #{orderId}
    </select>

